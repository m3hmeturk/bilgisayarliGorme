<Window x:Class="bilgisayarliGorme.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Görüntü İşleme Projesi" Height="710" Width="1204" 
        WindowStartupLocation="CenterScreen"
        MouseMove="Window_MouseMove"
        RenderOptions.BitmapScalingMode="NearestNeighbor">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1" Width="220" Height="280" Margin="0,20,0,10">
                <Image x:Name="imgGiris" Stretch="Uniform" />
            </Border>

            <Button Grid.Row="1" x:Name="btnResimYukle" Content="Resim Yükle" 
                    Height="30" Width="100" HorizontalAlignment="Left" Margin="0,0,0,10"
                    Click="btnResimYukle_Click"/>

            <ListView Grid.Row="2" x:Name="lstGirisPikselleri" BorderBrush="Gray" BorderThickness="1" Height="250" Width="220">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="No" Width="50" DisplayMemberBinding="{Binding PikselNo}" />
                        <GridViewColumn Header="R" Width="40" DisplayMemberBinding="{Binding R}" />
                        <GridViewColumn Header="G" Width="40" DisplayMemberBinding="{Binding G}" />
                        <GridViewColumn Header="B" Width="40" DisplayMemberBinding="{Binding B}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0">

            <Button x:Name="btnUygula" Content="UYGULA" Height="40" Width="120" Margin="0,0,0,20" Click="btnUygula_Click"/>

            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="İşlem Seç:" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="0" Grid.Column="1" x:Name="cmbIslemler" Width="160" Margin="10,5,0,5">
                    <ComboBoxItem Content="Gri Yap"/>
                    <ComboBoxItem Content="Histogram Çiz"/>
                    <ComboBoxItem Content="Sobel Kenar Bulma"/>
                    <ComboBoxItem Content="KM İntensity"/>
                    <ComboBoxItem Content="KM Öklid RGB"/>
                    <ComboBoxItem Content="Mahalanobis ND"/>
                    <ComboBoxItem Content="Mahalanobis Gri Tonlama"/>
                </ComboBox>

                <Label Grid.Row="1" Grid.Column="0" Content="Matris/K Değeri:" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="1" Grid.Column="1" x:Name="cmbMatrisBoyutu" Width="160" Margin="10,5,0,5" SelectedIndex="-1">
                    <ComboBoxItem Content="2"/>
                    <ComboBoxItem Content="3"/>
                    <ComboBoxItem Content="4"/>
                    <ComboBoxItem Content="5"/>
                    <ComboBoxItem Content="6"/>
                    <ComboBoxItem Content="8"/>
                    <ComboBoxItem Content="10"/>
                    <ComboBoxItem Content="20"/>
                    <ComboBoxItem Content="50"/>
                </ComboBox>
            </Grid>

            <Label x:Name="lblFareRenk" Content="X:0 Y:0 | R:0 G:0 B:0" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5"/>

            <Border BorderBrush="Black" BorderThickness="1" Height="140" Width="200" Margin="0,0,0,20">
                <Canvas x:Name="cnvHistogram"/>
            </Border>

            <StackPanel HorizontalAlignment="Left">
                <StackPanel Orientation="Vertical" Margin="0,5">
                    <Label Content="T Değerleri ve Piksel Sayıları:" FontWeight="Bold"/>
                    <TextBox x:Name="txtSonuc" 
             Height="170" 
             Width="300" 
             TextWrapping="Wrap" 
             VerticalScrollBarVisibility="Auto" 
             IsReadOnly="True" 
             Background="White"
             BorderBrush="Gray"
             BorderThickness="1"
             Padding="5"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <Label Content="İterasyon:" FontWeight="Bold" Width="100"/>
                    <Label x:Name="lblIterasyon" Content="0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <Label Content="Toplam Piksel:" FontWeight="Bold" Width="100"/>
                    <Label x:Name="lblPikselSayisi" Content="0"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Column="2" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1" Width="220" Height="280" Margin="0,20,0,40">
                <Image x:Name="imgCikis" Stretch="Uniform" />
            </Border>

            <ListView Grid.Row="2" x:Name="lstCikisPikselleri" BorderBrush="Gray" BorderThickness="1" Height="250" Width="220">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="No" Width="50" DisplayMemberBinding="{Binding PikselNo}" />
                        <GridViewColumn Header="R" Width="40" DisplayMemberBinding="{Binding R}" />
                        <GridViewColumn Header="G" Width="40" DisplayMemberBinding="{Binding G}" />
                        <GridViewColumn Header="B" Width="40" DisplayMemberBinding="{Binding B}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

    </Grid>
</Window>